<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:weightSum="8"
    tools:context=".activity.MainActivity"
    >

    <LinearLayout
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Qestion?"
            android:textSize="15sp"
            android:id="@+id/tvQestion"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imgCompound"
            android:src="@drawable/compound2"
            android:gravity="center"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="8"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_weight="4"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/tvAnswerA"
                android:text="AnswerA"
                android:textSize="17sp"
                android:gravity="center"
                android:background="@drawable/answers"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/tvAnswerB"
                android:text="AnswerB"
                android:gravity="center"
                android:textSize="17sp"
                android:background="@drawable/answers"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"/>


        </LinearLayout>



        <LinearLayout
            android:layout_weight="4"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <Button
                android:id="@+id/tvAnswerC"
                android:text="AnswerC"
                android:textSize="17sp"
                android:gravity="center"
                android:background="@drawable/answers"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/tvAnswerD"
                android:text="AnswerD"
                android:textSize="17sp"
                android:gravity="center"
                android:background="@drawable/answers"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"/>


        </LinearLayout>







    </LinearLayout>

    <LinearLayout
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvAnswerE"
            android:text="AnswerE"
            android:textSize="17sp"
            android:gravity="center"
            android:background="@drawable/answers"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            />


    </LinearLayout>


</LinearLayout>